{% extends "@ApplicationProjectContent/base/base_web.html.twig" %}

{% block title %}
    {{ title }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block javascriptsFooter %}
    {{ parent() }}
{% endblock %}

{% block body %}

    <div class="container" style="margin-top: 2%">
        <h2>{{ title }}</h2>

        <a href="{{ path("web_dashboard") }}" class="btn btn-secondary" >
            Voltar
        </a>
        <a href="{{ path('web_curriculo_create') }}" class="btn btn-primary" >
            Cadastrar
        </a>

        <table class="table">
            <thead>
            <tr>
                <th scope="col">id</th>
                <th scope="col">nomeCompleto</th>
                <th scope="col">email</th>
                <th scope="col">telefone</th>
                <th scope="col">dataNascimento</th>
                <th scope="col">estado</th>
                <th scope="col">cidade</th>
                <th scope="col">estadoCivil</th>
                <th scope="col">bairro</th>
                <th scope="col">perfilFacebookInstagram</th>
                <th scope="col">perfilLinkedin</th>
                <th scope="col">comoConheceu</th>
                <th scope="col">salarioAceitavel</th>
                <th scope="col">salarioPretentido</th>
                <th scope="col">tempoExperiencia1</th>
                <th scope="col">tempoExperiencia2</th>
                <th scope="col">mensagem</th>
                <th scope="col">politicaPrivacidade</th>
            </tr>
            </thead>
            <tbody>
            {% for data in objects %}
                <tr>
                    <th scope="row">
                        {{ data.id }}
                    </th>
                    <td>
                        {{ data.nomeCompleto }}
                    </td>
                    <td>
                        {{ data.email }}
                    </td>
                    <td>
                        {{ data.telefone }}
                    </td>
                    <td>
                        {{ data.dataNascimento }}
                    </td>
                    <td>
                        {{ data.estado }}
                    </td>
                    <td>
                        {{ data.cidade }}
                    </td>
                    <td>
                        {{ data.estadoCivil }}
                    </td>
                    <td>
                        {{ data.bairro }}
                    </td>
                    <td>
                        {{ data.perfilFacebookInstagram }}
                    </td>
                    <td>
                        {{ data.perfilLinkedin }}
                    </td>
                    <td>
                        {{ data.comoConheceu }}
                    </td>
                    <td>
                        {{ data.salarioAceitavel }}
                    </td>
                    <td>
                        {{ data.salarioPretentido }}
                    </td>
                    <td>
                        {{ data.tempoExperiencia1 }}
                    </td>
                    <td>
                        {{ data.tempoExperiencia2 }}
                    </td>
                    <td>
                        {{ data.mensagem }}
                    </td>
                    <td>
                        {{ data.politicaPrivacidade }}
                    </td>
                    <td>
                        <a href="{{ path("web_curriculo_show", { "id": data.id }) }}" class="btn btn-primary">
                            Exibir
                        </a>
                        <a href="{{ path("web_curriculo_edit", { "id": data.id }) }}" class="btn btn-warning">
                            Editar
                        </a>
                        <a href="{{ path("web_curriculo_delete", { "id": data.id }) }}" class="btn btn-danger" >
                            Deletar
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>

{% endblock %}












